<header>
  <div class="header-wrapper">
    <%= link_to 'Stage', root_path, class: 'title'%>
    <div class="header-right">
      <% if !user_signed_in? %>
        <%= link_to '会員登録', new_user_registration_path %>
        <%= link_to 'ログイン', new_user_session_path %>
      <% else %>
        <%= link_to current_user.name, '/' %>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
      <% end %>
    </div>
  </div>
</header>
<div class="search">
  <div class="search-wrapper">
    <div class="search-field">
      <i class="fa fa-search"></i>
      <%# JSで枠線色変更 %>
      <input type="search" placeholder="検索">
    </div>
    <label><input type="radio" name="search" class="radio">舞台</label>
    <label><input type="radio" name="search" class="radio">劇団</label>
    <label><input type="radio" name="search" class="radio">地域</label>
    <label><input type="radio" name="search" class="radio">ユーザー</label>
    <input type="submit" value="検索" class="search-submit">
  </div>
</div>